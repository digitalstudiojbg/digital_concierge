{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "server",
            "image": "digitalstudiojbg/dc-server",
            "hostname": "api",
            "essential": false,
            "memory": 512
        }, 
        {
            "name": "cms",
            "image": "digitalstudiojbg/dc-cms",
            "hostname": "cms",
            "essential": false,
            "memory": 256
        },
        {
            "name": "clientcms",
            "image": "digitalstudiojbg/dc-clientcms",
            "hostname": "clientcms",
            "essential": false,
            "memory": 256
        },
        {
            "name": "tablet",
            "image": "digitalstudiojbg/dc-tablet",
            "hostname": "tablet",
            "essential": false,
            "memory": 128
        },
        {
            "name": "touchscreen",
            "image": "digitalstudiojbg/dc-touchscreen",
            "hostname": "touchscreen",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "digitalstudiojbg/dc-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["cms", "server", "tablet", "touchscreen", "clientcms"],
            "memory": 256
        }
    ]
}